<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <label class="resource-label">{{localize "TYPES.Item.spell"}}</label>
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
      <div class="grid grid-2col">

        {{#if (and item.isEmbedded (or (gte item.actor.system.magicKnowledge 1) isGM))}}
        <div class="grid-span-1">
          <label class="resource-label">{{localize "SWYVERS.Spell.Suit.Label"}}</label>
          <select name="system.suit">
            {{selectOptions spellSuit selected=system.suit localize=true}}</select>
        </div>
        {{/if}}
        {{#if item.isEmbedded}}
        <div class="grid-span-1">
          <input type="checkbox" name="system.available" {{checked system.available}}>
          <label class="resource-label">{{localize "SWYVERS.Spell.Available"}}</label>
        </div>
        {{/if}}
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor enriched.description target="system.description" rollData=rollData button=true owner=owner
      editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      {{!-- As you add new fields, add them in here! --}}
      {{!-- <div class="resource">
        <label class="resource-label">Spell Level</label>
        <input type="text" name="system.spellLevel" value="{{system.spellLevel}}" data-dtype="Number" />
      </div> --}}

      <div class="collapsible-accordion">
        <div class="collapsible-item">
          <input type="checkbox" id="success">
          <label class="collapsible-item-label" for="success">{{localize "SWYVERS.Spell.Success"}}</label>
          <div class="collapsible-item-content">
            {{editor enriched.success target="system.success" button=true owner=owner editable=editable}}
          </div>
        </div>
      </div>
      <div class="collapsible-accordion">
        <div class="collapsible-item">
          <input type="checkbox" id="empoweredSuccess">
          <label class="collapsible-item-label" for="empoweredSuccess">{{localize
            "SWYVERS.Spell.EmpoweredSuccess"}}</label>
          <div class="collapsible-item-content">
            {{editor enriched.empoweredSuccess target="system.empoweredSuccess" button=true owner=owner
            editable=editable}}
          </div>
        </div>
      </div>
      {{#if (and item.isEmbedded (or (gte item.actor.system.magicKnowledge 1) isGM))}}
      <div class="collapsible-accordion">
        <div class="collapsible-item">
          <input type="checkbox" id="suitSuccess">
          <label class="collapsible-item-label" for="suitSuccess">{{selectedSuit}} {{localize
            "SWYVERS.Spell.SuitEffect"}}</label>
          <div class="collapsible-item-content">
            {{editor enriched.suitSuccess target="system.suitSuccess" button=true owner=owner editable=editable}}
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </section>

</form>