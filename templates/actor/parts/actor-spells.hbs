<ol class='items-list'>

  <li class='item flexrow items-header'>
    <div class='item-name'>
      {{localize 'SWYVERS.Item.Spell.KnownSpells'}}
    </div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Spell'}}' data-type='spell'>
        <i class='fas fa-plus'></i>
        {{localize 'SWYVERS.Item.Spell.AddSpell'}}
      </a>
    </div>
  </li>
  {{#each spells as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name flexrow'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'><img src='{{item.img}}' title='{{item.name}}' width='24'
            height='24' /></a>
      </div>
      <h4>{{item.name}} {{item.suitSymbol}}</h4>
    </div>
    <div class='item-controls flewrow'>
      <a class='item-control item-roll rollable' data-roll-type='spell' title='{{localize "DOCUMENT.Roll"}}'>
        <i class='fa-regular fa-hand-sparkles'></i>
      </a>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' spell'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' spell'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
    <div class="item-summary flexrow">
      {{{item.cardData}}}
    </div>
  </li>
  {{/each}}

</ol>