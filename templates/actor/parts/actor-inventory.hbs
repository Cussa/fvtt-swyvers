{{#each inventory as |container containerId|}}
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>
      {{{localize (concat 'SWYVERS.Container.' containerId)}}}
      {{#if container.totalSlots}}
      &nbsp;<em class="{{#if (gt container.usedSlots container.totalSlots)}}red{{/if}}">({{container.usedSlots}}/{{container.totalSlots}})</em>
      {{/if}}
    </div>
    <div class='item-controls'>
      {{#if (eq containerId "notCarried")}}
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Spell'}}' data-type='spell'
        data-spell-level='{{spellLevel}}'>
        <i class='fas fa-plus'></i>
      </a>
      {{/if}}
    </div>
  </li>
  {{#each container.items as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name flexrow'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'><img src='{{item.img}}' title='{{item.name}}' width='24'
            height='24' /></a>
      </div>
      <h4>{{item.name}}
        {{#if item.inlineDescriptor}}
        <span class="small-caps">({{item.inlineDescriptor}})</span>
        {{/if}}
      </h4>
    </div>
    <div class='item-controls'>
      {{#if (and item.rollable item.system.equipped)}}
      <a class='item-control item-roll rollable' data-roll-type='item' title='{{localize "DOCUMENT.Roll"}}'>
        <i class='fas fa-dice'></i>
      </a>
      {{/if}}
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' spell'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' spell'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
{{/each}}