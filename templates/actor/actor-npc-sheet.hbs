<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  <header class="sheet-header">
    <div class="left-side">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
      {{!-- <div class="resource flex-group-center">

      </div> --}}
    </div>
    <div class="header-fields">
      <h1 class="charname" style="text-align: center;"><input name="name" type="text" value="{{actor.name}}"
          placeholder="Name" /></h1>
      {{#if showNpcConfig}}
      <div class="resources grid grid-2col">
        <div class="resource flex-group-center">
          <label for="system.attributes.hd" class="resource-label small-caps rollable"
            data-roll="{{system.attributes.hd}}" data-label="{{localize "SWYVERS.Character.Hp.abbr"}}">{{localize
            "SWYVERS.NPC.HD"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.hd" value="{{system.attributes.hd}}" data-dtype="String" />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.attributes.appearing" class="resource-label small-caps rollable"
            data-roll="{{system.attributes.appearing}}" data-label="{{localize "SWYVERS.NPC.Appearing"}}">{{localize
            "SWYVERS.NPC.Appearing"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.appearing" value="{{system.attributes.appearing}}"
              data-dtype="String" />
          </div>
        </div>
      </div>
      {{/if}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.attributes.morale" class="resource-label small-caps rollable"
            data-roll-type="morale">{{localize "SWYVERS.NPC.Morale"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.morale" value="{{system.attributes.morale}}"
              data-dtype="Number" />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.attributes.fighting" class="resource-label small-caps rollable"
            data-roll-type="attack">{{localize "SWYVERS.Attack"}}</label> /
          <label for="system.attributes.con.value" class="resource-label small-caps">{{localize
            "SWYVERS.Deffense"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.attributes.fighting" value="{{system.attributes.fighting}}"
              data-dtype="Number" />
            <span> / </span>
            <input type="number" name="system.attributes.defense" value="{{system.attributes.defense}}"
              data-dtype="Number" disabled />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.hp.value" class="resource-label small-caps">{{localize
            "SWYVERS.Character.Hp.abbr"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.hp.value" value="{{system.attributes.hp.value}}"
              data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.attributes.hp.max" value="{{system.attributes.hp.max}}"
              data-dtype="Number" />
          </div>
        </div>

        {{!-- <div class="resource flex-group-center">
          <label for="system.attributes.level.value" class="resource-label">Level</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.level.value" value="{{system.attributes.level.value}}"
              data-dtype="Number" />
          </div>
        </div> --}}

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="inventory">{{localize "SWYVERS.Inventory"}}</a>
    <a class="item" data-tab="spells">{{localize "SWYVERS.Item.Spell.KnownSpells"}}</a>
    <a class="item" data-tab="characteristics">{{localize "SWYVERS.NPC.Characteristics"}}</a>
    <a class="item" data-tab="description">{{localize "SWYVERS.Description"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to
      the rollData property. --}}
      {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/swyvers/templates/actor/parts/actor-spells.hbs"}}
    </div>


    {{!-- Owned Skills Tab --}}
    <div class="tab skills" data-group="primary" data-tab="skills">
      {{> "systems/swyvers/templates/actor/parts/actor-skills.hbs"}}
    </div>


    {{!-- Owned Inventory Tab --}}
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      {{> "systems/swyvers/templates/actor/parts/actor-inventory.hbs" actor-type="npc"}}
    </div>

    <div class="tab characteristics" data-group="primary" data-tab="characteristics">
      {{!-- As you add new fields, add them in here! --}}
      <div class="resource">
        <div class="grid grid-3col">
          <div class="grid-span-2">
            <label for="system.attributes.movement" class="resource-label">{{localize "SWYVERS.NPC.Movement"}}</label>
            <input type="text" name="system.attributes.movement" value="{{system.attributes.movement}}"
              data-dtype="String" />
          </div>
          <div class="grid-span-1">
            <label class="resource-label">{{localize "SWYVERS.NPC.DefenseBonus"}}</label>
            <input type="number" name="system.defenseBonus" value="{{system.defenseBonus}}" data-dtype="Number"
              step="1" />
          </div>
          <div class="grid-span-1">
            <label class="resource-label">{{localize "SWYVERS.NPC.InitiativeBonus"}}</label>
            <input type="number" name="system.initiativeBonus" value="{{system.initiativeBonus}}" data-dtype="Number"
              step="1" />
          </div>
        </div>
      </div>
    </div>

  </section>
</form>