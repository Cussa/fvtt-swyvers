  <header class="sheet-header">
    <div class="left-side">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
      <div class="resource flex-group-center">
        <label for="system.attributes.fighting" class="resource-label small-caps rollable"
          data-roll-type="attack">{{localize "SWYVERS.Attack"}}</label> /
        <label for="system.attributes.con.value" class="resource-label small-caps">{{localize
          "SWYVERS.Deffense"}}</label>
        <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.attributes.fighting" value="{{system.attributes.fighting}}"
            data-dtype="Number" />
          <span> / </span>
          <input type="text" name="system.attributes.defense" value="{{system.attributes.defense}}" data-dtype="Number"
            disabled />
        </div>
      </div>
    </div>
    <div class="header-fields">
      <h1 class="charname" style="text-align: center;"><input name="name" type="text" value="{{actor.name}}"
          placeholder="Name" /></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-2col">
        <div class="resource flex-group-center">
          <label for="system.attributes.movement" class="resource-label">{{localize "SWYVERS.NPC.Movement"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.movement" value="{{system.attributes.movement}}" data-dtype="String" />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.attributes.appearing" class="resource-label">{{localize "SWYVERS.NPC.Appearing"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.appearing" value="{{system.attributes.appearing}}"
              data-dtype="String" />
          </div>
        </div>
      </div>
      <div class="resources grid grid-4col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.attributes.morale" class="resource-label small-caps rollable"
            data-roll-type="morale">{{localize "SWYVERS.NPC.Morale"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.morale" value="{{system.attributes.morale}}"
              data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.dex.value" class="resource-label small-caps rollable" data-roll-type="attribute"
            data-attribute="dex">{{localize "SWYVERS.Character.Dex.abbr"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.dex.value" value="{{system.attributes.dex.value}}"
              data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.attributes.dex.max" value="{{system.attributes.dex.max}}"
              data-dtype="Number" />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.attributes.hd" class="resource-label small-caps rollable" data-roll-type="hd">{{localize
            "SWYVERS.NPC.HD"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.hd" value="{{system.attributes.hd}}"
              data-dtype="String" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.hp.value" class="resource-label small-caps">{{localize
            "SWYVERS.Character.Hp.abbr"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.hp.value" value="{{system.attributes.hp.value}}"
              data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.attributes.hp.max" value="{{system.attributes.hp.max}}"
              data-dtype="Number" />
          </div>
        </div>

        {{!-- <div class="resource flex-group-center">
          <label for="system.attributes.level.value" class="resource-label">Level</label>
